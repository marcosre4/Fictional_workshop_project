CREATE VIEW RELATORIO AS 
SELECT,A.NOME,A.SEXO,B.NUMERO,B.TIPO,C.MODELO,C.PLACA,D.MARCA,E.COR
FROM CLIENTES A
INNER JOIN TELEFONES B
ON A.IDCLIENTE=B.ID_CLIENTE
INNER JOIN CARRO C
ON A.ID_CARRO=C.IDCARRO
INNER JOIN MARCA D
ON C.ID_MARCA=D.IDMARCA
INNER JOIN CARRO_COR F
ON C.IDCARRO=F.ID_CARRO
INNER JOIN CORES E
ON F.ID_COR=E.IDCOR;

/*Select para a view

SELECT * FROM RELATORIO;


SET AUTOCOMMIT = O;

DELIMITER $

CREATE PROCEDURE CADASTRO (P_NOME VARCHAR (30),
                 P_SEXO ENUM('M','F'),
                 P_NUMERO VARCHAR(30),
                 P_TIPO ENUM('CEL','RES','COM'),
                 P_MODELO VARCHAR (30),
                 P_MARCA VARCHAR(30),
                 P_PLACA VARCHAR (30),
                 P_CHASSI VARCHAR(30),
                 P_COR VARCHAR(30))
BEGIN          (
               INSERT INTO CLIENTES(IDCLIENTE,NOME,SEXO)
               VALUES(NULL,P_NOME,P_SEXO)
               INSERT INTO TELEFONES(IDTELEFONE,NUMERO,TIPO)
               VALUES(NULL,P_NUMERO,P_TIPO)
               INSERT INTO CARRO(IDCARRO,MODELO,PLACA,CHASSI)
               VALUES(NULL,P_MODELO,P_PLACA,P_CHASSI)
               INSERT INTO MARCA(IDMARCA,MARCA)
               VALUES(NULL,P_MARCA)
               INSERT INTO CORES(IDCOR,COR)
               VALUES(NULL,P_COR)
               COMMIT;
                )
$
